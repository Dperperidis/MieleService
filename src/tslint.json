{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            "disable-next-line",
            true,
            "element",
            "app",
            "kebab-case"
        ], 
        "quotemark": [
           false
       ],
       "max-line-length": [
        true,
        150
      ],
    }
}
